{
  "name": "estcequecestlasaison",
  "description": "Monorepo for estcequecestlasaison.fr - Seasonal fruits and vegetables in France",
  "author": "Victor de la Fouchardiere",
  "license": "UNLICENSED",
  "keywords": [
    "seasonal",
    "fruits",
    "vegetables",
    "france",
    "seasonality"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/viclafouch/estcequecestlasaison.git"
  },
  "homepage": "https://estcequecestlasaison.fr",
  "bugs": {
    "url": "https://github.com/viclafouch/estcequecestlasaison/issues"
  },
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm --filter @estcequecestlasaison/web dev",
    "build": "pnpm --filter @estcequecestlasaison/web build",
    "start": "pnpm --filter @estcequecestlasaison/web start",
    "lint": "pnpm -r lint",
    "lint:fix": "pnpm -r lint:fix",
    "test": "vitest run",
    "prepare": "husky",
    "generate-images": "npx tsx --env-file=.env.local scripts/generate-images.ts",
    "optimize-images": "npx tsx scripts/optimize-images.ts",
    "generate-og": "npx tsx scripts/generate-og-images.ts"
  },
  "devDependencies": {
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "prettier": "^3.8.1",
    "satori": "^0.19.1",
    "sharp": "^0.34.5",
    "vitest": "^4.0.18"
  },
  "packageManager": "pnpm@10.28.2",
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@tanstack/ai": "^0.3.0",
    "@tanstack/ai-gemini": "^0.3.2"
